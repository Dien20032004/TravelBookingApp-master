<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_app_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_app_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project1992"
        tools:targetApi="31">
        <activity android:name=".Activity.MyOrderActivity"
            android:exported="false"/>
        <activity android:name=".Activity.NotificationActivity"
            android:exported="false"/>
        <activity
            android:name=".Activity.ExperienceDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.FeedActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"/>
        <activity
            android:name=".Activity.ExploreActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.TicketDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SeatListActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.IntroActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.Project1992">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ProfileActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.VerifyOtpActivity" />
        <activity android:name=".Activity.PhoneLoginActivity" />
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".Activity.EditProfileActivity" />
        <activity android:name=".Activity.FullCollectionActivity"/>
        <activity android:name=".Nav.UserGuideActivity" />
        <activity android:name=".Nav.BookFlightActivity" />
        <activity android:name=".Nav.ChangeAvatarActivity" />
        <activity android:name=".Nav.CreateNewPostActivity" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".Services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>